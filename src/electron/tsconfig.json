{
    "compilerOptions": {
        "strict": false,
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "../../dist-electron",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": "../../",
        "paths": {
            "@/*": ["src/*"]
        },
        "moduleResolution": "NodeNext"
    },
    "include": [
        "**/*.ts",
        "**/*.cts",
        "../types/**/*.d.ts"
    ]
}
